{
  'extends': 'airbnb',
  'env': {
    browser: true
  },
  rules: {
    'no-use-before-define': [
      2,
      {
        functions: false
      }
    ],
    'quotes': [
      2,
      'single',
      {
        avoidEscape: true,
        allowTemplateLiterals: true
      }
    ],
    'react/jsx-filename-extension': [1, { 'extensions': ['.js', '.jsx'] }]
  }
}
